{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "buildPath": {
      "type": "string",
      "description": "Path containing built code to deploy."
    },
    "repository": {
      "type": "string",
      "description": "Target repository."
    },
    "build": {
      "type": "string",
      "description": "Heroku build command",
      "default": ""
    }
  },
  "required": ["buildPath", "repository"]
}
