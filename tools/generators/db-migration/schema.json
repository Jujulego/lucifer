{
  "$schema": "http://json-schema.org/draft-07/schema",
  "id": "SchematicsDBMigration",
  "title": "DB Migration Schema",
  "type": "object",
  "properties": {
    "name": {
      "alias": "n",
      "description": "The name of the migration.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "database": {
      "type": "string",
      "description": "Database of the project.",
      "default": "default"
    }
  },
  "required": [
    "name"
  ]
}
