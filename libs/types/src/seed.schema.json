{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://lucifer.herokuapp.com/seed.schema.json",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "api-key": {
      "$id": "#api-key",
      "$ref": "api-key/schema.json#/definitions/createApiKey"
    },
    "user": {
      "$id": "#user",
      "allOf": [
        { "$ref": "user/schema.json#/definitions/createLocalUser" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "apiKeys": {
              "type": "array",
              "items": { "$ref": "#api-key" },
              "default": []
            },
            "projects": {
              "type": "array",
              "items": { "$ref": "#project" },
              "default": []
            }
          }
        }
      ]
    },
    "project": {
      "$id": "#project",
      "allOf": [
        { "$ref": "project/schema.json#/definitions/createProject" },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "variables": {
              "type": "array",
              "items": { "$ref": "#variable" },
              "default": []
            }
          }
        }
      ]
    },
    "variable": {
      "$id": "#variable",
      "$ref": "variable/schema.json#/definitions/createVariable"
    }
  },
  "properties": {
    "users": {
      "type": "array",
      "description": "Users to create (must already exists in auth0)",
      "items": {
        "$ref": "#user"
      }
    }
  }
}
