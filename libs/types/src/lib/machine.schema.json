{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://lucifer.herokuapp.com/machine.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "ownerId": {
      "$ref": "./user.schema.json#/properties/id",
      "description": "Owner's identifier"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Machine's identifier"
    },
    "shortName": {
      "type": "string",
      "description": "Machine's identifier"
    }
  },
  "required": ["ownerId", "id", "shortName"]
}
