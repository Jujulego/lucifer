{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://lucifer.herokuapp.com/project.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "adminId": {
      "$ref": "../user/schema.json#/properties/id"
    },
    "projectId": {
      "$ref": "../project/schema.json#/properties/id"
    },
    "id": {
      "type": "string",
      "maxLength": 100,
      "pattern": "^[a-z0-9-]+$",
      "description": "Variable's identifier"
    },
    "name": {
      "type": "string",
      "maxLength": 100,
      "description": "Variable's name"
    },
    "value": {
      "type": "string",
      "description": "Variable's value"
    }
  }
}
